<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inbox.ChatActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/major">
    </LinearLayout>
    <co.intentservice.chatui.ChatView
        android:id="@+id/chat_view"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:bubbleBackgroundSend="@color/green1"
        app:bubbleBackgroundRcv="@color/yellow1"
        app:bubbleElevation="elevated"
        app:backgroundColor="#EFF8FD"
        app:messageTextColorRcv="@color/white"
        app:messageTextColorSend="@color/white"
        app:tStampTextColorSend="@color/yellow1"
        app:tStampTextColorRcv="@color/green1"/>

</LinearLayout>